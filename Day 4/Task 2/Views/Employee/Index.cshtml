@model IEnumerable<WebApplication5.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmpNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmpNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmpNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="GetEmployeesByDeptNo">Get Employees From Department</a> |
    <a asp-action="GetEmployeesByJob">Get Employees based on designation</a>
</p>
